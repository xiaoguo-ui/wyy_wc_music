/**index.wxss**/
/* 轮播图 */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 300rpx;
}

/* 五个图标 */
.nav-container {
  display: flex;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.nav-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  text-align: center;
  background:rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}

.nav-item text {
  font-size: 20rpx;
}

/* 推荐歌曲 */
.recommend-container {
  padding: 20rpx;
  margin-top: 20rpx;
}

/* 内容区域 */
.recommend-scroll {
  margin-top: 20rpx;
  display: flex;
  height: 300rpx;
}

.scroll-item {
  width: 200rpx;
  margin-right: 20rpx;
}

.scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scroll-item text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


/* 热歌榜 */

.hot-song-title {
  font-size: 25rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.hot-list {
  width: 80%;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.hot-list image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
}
.hot-list text:nth-of-type(1){
  margin-right: 20rpx;
  color: #666;
}
.hot-list text:nth-of-type(2){
  font-size: 30rpx;
  color: #666;
}

